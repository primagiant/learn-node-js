<div class="row">
    <div class="col-md-6">
        <h2>Detail Contact</h2>
        <% if (!contact) { %>
        <div class="alert alert-danger" role="alert">
            <p>Contact Tidak ditemukan</p>
            <a href="/contact" class="alert-link">Kembali ke List Contact</a>.
        </div>
        <% } else { %>
        <div class="card" style="width: 18rem">
            <div class="card-body">
                <h5 class="card-title"><%= contact.name %></h5>
                <h6 class="card-subtitle mb-2 text-muted">
                    <%= contact.phone %>
                </h6>
                <p class="card-text"><%= contact.email %></p>
                <a href="/contact" class="card-link"
                    >&laquo; Back to All Contact</a
                >
            </div>
        </div>
        <% } %>
    </div>
</div>
